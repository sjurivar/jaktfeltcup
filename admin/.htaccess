# Admin directory access
# Allow access to admin files

# Enable directory browsing for admin
Options +Indexes

# Allow PHP execution
<Files "*.php">
    Require all granted
</Files>

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# Prevent access to sensitive files
<Files "*.sql">
    Require all denied
</Files>

<Files "*.log">
    Require all denied
</Files>

<Files "*.bak">
    Require all denied
</Files>
